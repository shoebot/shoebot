"""
Perform some basic transformations (rotation and translation) on rectangles.
"""

size(300, 500)
background(0.2)

fill(1, 0.2)
stroke(1, 0.5)

transform(CENTER)

translate(100, 100)

for i in range(6):
    push()
    rotate(i * 15)
    rect(0, 0, 80, 80)
    pop()

translate(0, 100)

for i in range(6):
    push()
    scale(i / 6.)
    rect(0, 0, 80, 80)
    pop()

translate(0, 100)

for i in range(6):
    push()
    skew(i / 3.)
    rect(0, 0, 80, 80)
    pop()
